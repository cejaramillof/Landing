.container
  .row
    .col-md-12
      %h1.title-dash.text-center Edit your Account
.container.text-center
  .row
    .col-xs-2.col-md-4
    .col-xs-8.col-md-4.login-cont
      =form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        =devise_error_messages!
        .field
          %p Email:
          =f.email_field :email, autofocus: true, :style => "border-radius: 6px;border: 1px solid #dedede; padding: 1em; color: #8e8e8e;width: 80%;"
        -if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %span Currently waiting confirmation for= resource.unconfirmed_email
        .field
          %p 
            Password: 
            %em
              (leave blank if you dont want to change it)
          =f.password_field :password, autocomplete: "off", :style => "border-radius: 6px;border: 1px solid #dedede; padding: 1em; color: #8e8e8e;width: 80%;"
        .field
          %p Password confirmation:
          =f.password_field :password_confirmation, autocomplete: "off", :style => "border-radius: 6px;border: 1px solid #dedede; padding: 1em; color: #8e8e8e;width: 80%;"
        .field
          %p 
            Current password:
            %em (we need your current password to confirm your changes)
          = f.password_field :current_password, autocomplete: "off", :style => "border-radius: 6px;border: 1px solid #dedede; padding: 1em; color: #8e8e8e;width: 80%;"
        .actions
          =f.submit "UPDATE", :class => "boton-green-d"
          %span= link_to "BACK", :back, :class => "boton-red-d"
    .col-xs-2.col-md-4